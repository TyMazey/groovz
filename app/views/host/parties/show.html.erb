<div class='room-info-panel'>
  <div class="room-info-wrapper" id='room-name'>
    <strong><h3 class='room-info-text'>Party Name:</h3></strong><p><%= facade.name %></p>
  </div>

  <div class="room-info-wrapper" id='room-code'>
    <strong><h3 class='room-info-text'>Party Code:</h3></strong><p><%= facade.code %></p>
  </div>
</div>

<div class="player-container">
  <div id="host-album-art">
    <%= image_tag('album-loading.gif', class: 'album-artwork', id: 'album-art') %>
  </div>
  <div class="track-info">
    <h4 id="track-title">Loading...</h4>
    <p id="track-artist">Your party begins soon</p>
  </div>
  <div class="player-control-section">
    <div class="save-button">
      <%= image_tag("placeholder-checkmark.png", class: 'icon', id: "save-track") %>
    </div>
    <div class="play-button">
      <%= image_tag("placeholder-checkmark.png", class: 'icon', onclick: "playSong()") %>
    </div>
    <div class="next-button">
      <%= image_tag("placeholder-checkmark.png", class: 'icon', onclick: "skipSong()") %>
    </div>
  </div>
</div>

<%= button_to 'Shut It Down', cancel_party_path, method: :delete, id: 'leave-party-button', class: 'btn btn-boxed' %>
